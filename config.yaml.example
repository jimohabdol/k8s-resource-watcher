clusterName: "my-cluster"

# Watcher configuration
watcher:
  # Deployment monitoring - only notify when these important fields change
  # This prevents HPA/controller replica changes from triggering notifications
  deploymentImportantFields:
    - "containers"              # Container image, env vars, resources, ports
    - "volumes"                 # Volume mounts and configurations
    - "serviceAccountName"      # Service account changes
    - "nodeSelector"            # Node selection rules
    - "affinity"                # Pod affinity/anti-affinity
    - "tolerations"             # Node tolerations
    - "securityContext"         # Security settings
    - "imagePullSecrets"        # Image pull secrets
    - "hostAliases"             # Host alias configurations
    - "initContainers"          # Init container changes
  
  # Enhanced features for production use
  eventDeduplicationWindow: "30s"    # Prevent duplicate notifications (30s, 1m, 5m)
  resourceVersionCheck: true         # Enable resource version optimization
  metricsEnabled: true               # Enable metrics collection and observability

# Resource monitoring configuration
resources:
  # Monitor all Deployments in the default namespace
  - kind: "Deployment"
    namespace: "default"
  
  # Monitor a specific ConfigMap by name
  - kind: "ConfigMap"
    namespace: "default"
    resourceName: "app-config"
  
  # Monitor a specific Secret by name
  - kind: "Secret"
    namespace: "default"
    resourceName: "database-credentials"
  
  # Monitor all Services in the default namespace
  - kind: "Service"
    namespace: "default"
  
  # Monitor a specific Ingress by name
  - kind: "Ingress"
    namespace: "default"
    resourceName: "web-app-ingress"
  
  # Monitor all ConfigMaps across all namespaces
  - kind: "ConfigMap"
    namespace: ""
  
  # Monitor a specific Deployment by name in a specific namespace
  - kind: "Deployment"
    namespace: "production"
    resourceName: "web-app"
  
  # Monitor all Secrets in the kube-system namespace
  - kind: "Secret"
    namespace: "kube-system"

# Email configuration
email:
  smtpHost: "smtp.example.com"
  smtpPort: 587
  useAuth: true
  smtpUsername: "your-email@example.com"
  smtpPassword: "your-password"
  fromEmail: "k8s-watcher@example.com"
  toEmails:
    - "admin@example.com"
    - "ops@example.com"
  
  # TLS Configuration (optional - defaults are smart based on port)
  # enableTLS: true        # Enable TLS (default: true for 587/465, false for 25)
  # insecureTLS: false     # Skip TLS verification (default: false, except for port 25)
  # forceSSL: false        # Force SSL connection (default: false, except for port 465)

# Logging configuration
logging:
  level: "info"      # debug, info, warn, error
  format: "text"     # text, json
  enableJSON: false 